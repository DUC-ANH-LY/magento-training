<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="magenest" translate="label" sortOrder="200">
            <label>Magenest</label>
        </tab>
        <section id="hello" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1"
                 showInStore="1">
            <label>Movie</label>
            <tab>magenest</tab>
            <resource>Magenest_Movie::config_movie</resource>
            <group id="hellopage" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <label>Movie list</label>

                <field id="text_movie" translate="label" type="text" sortOrder="2" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Text field</label>
                </field>

                <field id="select_movie" translate="label" type="select" sortOrder="3" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Select Movie</label>
                    <source_model>Magenest\Movie\Model\Config\Source\ShowOptions</source_model>
                </field>

                <field id="select_yes_no" translate="label" type="select" sortOrder="4" showInDefault="4">
                    <label> <![CDATA[Yes or <strong class="colorRed">No!</strong>]]></label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>

                </field>

                <field id="actor_count" translate="label" type="text" sortOrder="5" showInDefault="1">
                    <label>Actor Count</label>
                    <depends>
                        <field id="select_movie">1</field>
                    </depends>
                    <frontend_model>Magenest\Movie\Block\System\Config\Form\Field\Disable</frontend_model>
                    <backend_model>Magenest\Movie\Block\System\Config\Form\Field\SetValue</backend_model>
                </field>

                <field id="movie_count" translate="label" type="text" sortOrder="6" showInDefault="1">
                    <label>Movie Count</label>
                    <backend_model>Magenest\Movie\Block\System\Config\Form\Field\SetValue</backend_model>
                    <frontend_model>Magenest\Movie\Block\System\Config\Form\Field\Disable</frontend_model>
                </field>

                <field id="reload_buton" translate="label" sortOrder="7" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <frontend_model>Magenest\Movie\Block\System\Config\Form\Button</frontend_model>
                </field>


            </group>
        </section>
    </system>
</config>

